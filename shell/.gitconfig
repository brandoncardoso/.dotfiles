[user]
	useConfigOnly = true
	name = Brandon Cardoso

[core]
	editor = nvim

[color]
	ui = true

[color "diff"]
	meta = cyan
	frag = magenta bold
	whitespace = red

[color "status"]
	added = green
	changed = yellow
	untracked = red
	branch = cyan

[commit]
	verbose = true

[diff]
	algorithm = histogram

[pull]
	; fast-forward only
	ff = only
	rebase = true

[merge]
	conflictstyle = diff3
	prompt = true

[rerere]
	; recording of resolved conflicts
	enabled = true

[stash]
	showPatch = true

[push]
	default = simple

[log]
	decorate = full

[status]
	submoduleSummary = true

[alias]
	a = add
	ap = add -p
	b = branch
	co = commit
	com = commit -m
	ch = checkout
	chb = checkout -b
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	cps = cherry-pick --skip
	d = diff
	ds = diff --staged
	i = init
	l = log --graph
	la = log --graph --all
	m = merge
	pl = pull
	ps = push
	psu = push -u
	rb = rebase
	re = reset
	res = reset --soft
	reh = reset --hard
	rs = restore
	rv = revert
	sh = stash
	sha = stash apply
	st = status
	whoami = !git config --get user.name && git config --get user.email

